
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<div class="row">
    <div class="col-6">
        <h2 class="text-primary">All Locations </h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-primary" asp-action="Upsert"><i class="fas fa-plus"></i> &nbsp; Add new location</a>
    </div>
</div>

<br />
