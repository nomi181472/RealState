@model realstate.models.ViewModels.Location;
@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    var title = "Add location";
}

<form method="post">
    <div class="row p-3 border">
         <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if (Model.LocationId != 0)
        {
            title = "Edit Location";

        }
    <div class="col-12 border-bottom">
        <h2 class="text-primary">@title</h2>
    </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="City"></label>
                </div>
                <div class="col-8">
                   <input asp-for="City" class="form-control"/>
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
         </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Province"></label>
                </div>
                <div class="col-8">
                   <input asp-for="Province" class="form-control"/>
                    <span asp-validation-for="Province" class="text-danger"></span>
                </div>
            </div> 
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Country"></label>
                </div>
                <div class="col-8">
                   <input asp-for="Country" class="form-control"/>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.LocationId != 0)
                    {
                        <partial name="_editOrBackToList" model="@Model.LocationId" />
                    }
                    else
                    {
                        <partial name="_createOrBackToList"  />
                    }
                </div>
            </div>
        </div>
    </div>
</form>
@section Scripts{ 
<partial name="_ValidationScriptsPartial"/> 
}
